{
  "name": "instamutual",
  "version": "1.0.0",
  "description": "Node.js command-line tool to find out people who do not follow you back on Instagram",
  "main": "src/main.ts",
  "repository": "git@github.com:lauslim12/instamutual.git",
  "author": "Nicholas",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "ts-node src",
    "prettier-check": "prettier --check ./**/*.ts",
    "eslint-check": "eslint . --ext .ts",
    "type-check": "tsc --noEmit",
    "lint": "yarn prettier-check && yarn eslint-check && yarn type-check"
  },
  "dependencies": {
    "@types/node": "^16.11.6",
    "instagram-private-api": "^1.45.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "prettier": "^2.4.1"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "simple-import-sort"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "rules": {
      "simple-import-sort/imports": "error",
      "simple-import-sort/exports": "error"
    },
    "overrides": [
      {
        "files": [
          "./src/instagram.ts"
        ],
        "rules": {
          "@typescript-eslint/no-explicit-any": "off"
        }
      }
    ]
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 80
  },
  "engines": {
    "node": ">=14.x"
  }
}
